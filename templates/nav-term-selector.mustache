{{!
    @template block_myoverview_term_filter/nav-term-selector

    This template renders the term dropdown.

    Example context (json):
    {
        "default_all": "2018-1",
        "default_inprogress": "all",
        "default_future": "all",
        "default_past": "2018-0",
        "default_favourites": "all",
        "default_hidden": "all",
        "terms": [{"name": "WS2018/2019","id": "2018-1"}, {"name": "SS2018","id": "2018-0"}]
    }
}}
<div class="dropdown m-b-1 ml-1 mr-auto">
    <div id="termdropdown" data-default-all="{{default_all}}" data-default-inprogress="{{default_inprogress}}" data-default-future="{{default_future}}"
         data-default-past="{{default_past}}" data-default-favourites="{{default_favourites}}" data-default-hidden="{{default_hidden}}">
        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                aria-label="{{#str}} aria:termdropdown, block_myoverview_term_filter {{/str}}">
            <span id="selectedterm" class="d-sm-inline-block" data-active-item-text>
                {{#terms}}{{#active}}{{name}}{{/active}}{{/terms}}
            </span>
        </button>
        <ul class="dropdown-menu multilevel" data-show-active-item data-active-item-text role="menu" aria-labelledby="termdropdown">
            {{#terms}}
                <li>
                    <a class="dropdown-item {{#active}}active{{/active}}" href="#" data-term-option="term" data-value="{{id}}" data-pref="{{id}}" aria-label="{{name}}"
                       aria-controls="courses-view-{{uniqid}}">
                        {{name}}
                    </a>
                </li>
            {{/terms}}
        </ul>
    </div>
</div>